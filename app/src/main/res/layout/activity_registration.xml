<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:background="@color/white"

        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RegisterTv"
        android:layout_marginTop="30dp"
        android:text="Please Enter Your Details For Registration"
        android:textAlignment="center"
        android:textStyle="bold"


        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RegisterTvFullname"
            android:text="Full Name *"
            android:textSize="16sp"
            android:padding="6dp"
            android:textColor="#555555"
            android:layout_below="@+id/RegisterTv"
            android:layout_marginTop="50dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RegisterEtFullname"
            android:hint="Enter Your Full Name"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_below="@+id/RegisterTvFullname"
            android:background="@drawable/border"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RegisterTvEmail"
            android:text="Email *"
            android:textSize="16sp"
            android:padding="6dp"
            android:textColor="#555555"
            android:layout_below="@+id/RegisterEtFullname"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RegisterEtEmail"
            android:hint="Enter Your Email"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_below="@+id/RegisterTvEmail"
            android:background="@drawable/border"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RegisterTvBirthdate"
            android:text="Date Of Birth (dd/mm/yy) *"
            android:textSize="16sp"
            android:padding="6dp"
            android:textColor="#555555"
            android:layout_below="@+id/RegisterEtEmail"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/RegisterEtBirthdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RegisterTvBirthdate"
            android:background="@drawable/border"
            android:hint="Enter Your date of birth (dd/mm/yy)"
            android:inputType="date"
            android:padding="6dp"
            android:textSize="16sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RegisterTvgender"
            android:text="Gender *"
            android:textSize="16sp"
            android:padding="6dp"
            android:textColor="#555555"
            android:layout_below="@+id/RegisterEtBirthdate"
            android:layout_marginTop="10dp"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/RegisterRadioGroup"
            android:layout_below="@+id/RegisterTvgender"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:id="@+id/RadioMale"
                android:textSize="16sp"
                android:textColor="#555555"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:id="@+id/RadioFemale"
                android:textSize="16sp"
                android:textColor="#555555"/>

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RegisterTvMobile"
            android:text="Mobile *"
            android:textSize="16sp"
            android:padding="6dp"
            android:textColor="#555555"
            android:layout_below="@+id/RegisterRadioGroup"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RegisterEtMobile"
            android:hint="Enter Your Mobile(+91)"
            android:inputType="date"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_below="@+id/RegisterTvMobile"
            android:background="@drawable/border"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RegisterTvPassword"
            android:text="Password *"
            android:textSize="16sp"
            android:padding="6dp"
            android:textColor="#555555"
            android:layout_below="@+id/RegisterEtMobile"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RegisterEtPassword"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_below="@+id/RegisterTvPassword"
            android:background="@drawable/border"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RegisterTvConfirmPassword"
            android:text="Confirm Password *"
            android:textSize="16sp"
            android:padding="6dp"
            android:textColor="#555555"
            android:layout_below="@+id/RegisterEtPassword"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/RegisterEtConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RegisterTvConfirmPassword"
            android:background="@drawable/border"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="6dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addhar"
            android:text=" Addhaar Number"
            android:textSize="16sp"
            android:padding="6dp"
            android:textColor="#555555"
            android:layout_below="@+id/RegisterEtConfirmPassword"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/addharData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addhar"
            android:background="@drawable/border"
            android:hint="Enter Addhaar Id"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="6dp"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:text="Register"
            android:id="@+id/RegisterBtn"
            android:layout_below="@+id/addharData"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressbar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="10dp"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RegisterTvEnd"
            android:layout_marginTop="20dp"
            android:text="All rights reserved @PuneDarshan 2022"
            android:textAlignment="center"
            android:layout_below="@+id/RegisterBtn"
            android:textSize="10sp"


            />



    </RelativeLayout>

</ScrollView>